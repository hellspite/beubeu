<div class="row">
    {% for key, e in new %}
    <div class="col-sm-3">
        <div class="news-img">
            <a href="{{ path(type~'_show', {'slug': e.slug}) }}">
                {# Da ripristinare in produzione #}
                {#<img src="{{ asset('uploads/images/'~type~'/' ~ e.image) | imagine_filter('squared_thumbnail') }}" />#}
                <img src="../media/cache/squared_thumbnail/uploads/images/{{ type~'/' ~ e.image }}" />
            </a>
        </div>
        <div class="exhibit-title">
            <a href="{{ path(type~'_show', {'slug': e.slug}) }}">
                <h2>{{ e.title }}</h2>
            </a>
        </div>
    </div>
    {% if (key+1)%4 == 0 and (key+1) < new|length %}
</div>
<div class="row">
    {%  endif %}
    {% endfor %}
</div>

</div>

