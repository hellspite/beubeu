<div class="container exhibit-container">

    <div id="fb-root"></div>
    <script>(function(d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) return;
      js = d.createElement(s); js.id = id;
      js.src = 'https://connect.facebook.net/it_IT/sdk.js#xfbml=1&version=v3.1';
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>

    {% set currentPath = path(app.request.attributes.get('_route'),
                       app.request.attributes.get('_route_params')) %}
                    
    <div class="exhibit-title"><h1>{{ obj.title }}</h1></div>
    <div class="exhibit-image"><img src="{{ asset('uploads/images/' ~ type ~ '/' ~ obj.image) }}" class="img-responsive" /></div>
    <div class="exhibit-desc">
        {{ obj.description|raw }}
    </div>

    {% if obj.gallery1 or obj.gallery2 or obj.gallery3 %}
        <hr/>
        <div class="gallery">
            <div class="row">
                <div id="links">
                    {% if obj.gallery1 %}
                    <div class="col-sm-4">
                        <a href="{{ asset('uploads/images/' ~ type ~ '/' ~ obj.gallery1) }}">
                            <img src=" {{ asset('uploads/images/' ~ type ~ '/' ~ obj.gallery1) | imagine_filter('squared_thumbnail') }}" />
                        </a>
                    </div>
                    {% endif %}
                    {% if obj.gallery2 %}
                    <div class="col-sm-4">
                        <a href="{{ asset('uploads/images/' ~ type ~ '/' ~ obj.gallery2) }}">
                            <img src=" {{ asset('uploads/images/' ~ type ~ '/' ~ obj.gallery2) | imagine_filter('squared_thumbnail') }}" />
                        </a>
                    </div>
                    {% endif %}
                    {% if obj.gallery3 %}
                    <div class="col-sm-4">
                        <a href="{{ asset('uploads/images/' ~ type ~ '/' ~ obj.gallery3) }}">
                            <img src=" {{ asset('uploads/images/' ~ type ~ '/' ~ obj.gallery3) | imagine_filter('squared_thumbnail') }}" />
                        </a>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endif %}

    <div class="fb-share-button" data-href="http://www.beubeuartfestival{{ currentPath }}" data-layout="button" data-size="small" data-mobile-iframe="true"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2F127.0.0.1%3A8000%2Fmostre%2Fmostra-nuova&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Condividi</a></div>
</div>

